@model PhoneBook.Models.Structure
@{
	string title = "Редактирование структуры";
	ViewData["Title"] = title;
}
<div class="text-center">
	<h3 class="mb-4">@title</h3>
	<form method="post" class="form-horizontal" role="form">
		<input type="hidden" value="@Model.Id" name="Id" />
		<div class="form-group mb-2">
			<label for="Title" class="col-md-7 control-label">Название:</label>
			<div class="col-md-7 mx-auto">
				<input type="text" name="Title" value="@Model.Title" class="form-control" required />
			</div>
		</div>
		<div class="form-group">
			<input type="submit" class="btn btn-primary" value="Отправить" />
		</div>
	</form>
	<a asp-controller="Home" asp-action="Index" class="btn btn-secondary mt-3">Назад</a>
</div>