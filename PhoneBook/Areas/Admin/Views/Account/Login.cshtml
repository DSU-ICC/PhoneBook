@model PhoneBook.ViewModels.LoginViewModel
@{
	string title = "Вход в панель администратора";
	ViewData["Title"] = title;
}
<h2 class="text-center">@title</h2>
<form method="post" class="text-center" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
	<div asp-validation-summary="ModelOnly"></div>
	<div class="form-group mb-2">
		<label asp-for="Email"></label><br />
		<div class="col-md-4 mx-auto">
			<input class="form-control" asp-for="Email" />
			<span asp-validation-for="Email"></span>
		</div>
	</div>
	<div class="form-group mb-2">
		<label asp-for="Password"></label><br />
		<div class="col-md-4 mx-auto">
			<input class="form-control" asp-for="Password" />
			<span asp-validation-for="Password"></span>
		</div>
	</div>
	<div class="form-group mb-2">
		<input asp-for="RememberMe" />
		<label asp-for="RememberMe"></label>
	</div>
	<div class="form-group mb-2">
		<input type="submit" class="btn-primary btn" value="Войти" />
	</div>
</form>
<div class="text-center">
	<a asp-area="" asp-controller="Home" asp-action="Index" class="btn-secondary btn">Назад</a>
</div>

